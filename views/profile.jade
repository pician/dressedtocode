              button.btn.black.btn-block clothing size
              button.btn.black.btn-block jewelry
              button.btn.black.btn-block wishlist
            .span6.inline-block
              button.btn.black.btn-block shoes
              button.btn.black.btn-block bags
              button.btn.black.btn-block occassions

          br
          br
          br


