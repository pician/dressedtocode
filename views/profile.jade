      .page-content
        .container-fluid
          .row-fluid.portfolio-block
            .portfolio-text(style='padding: 5px')
              img.img.thumbnail(src='https://graph.facebook.com/#{profile.id}/picture?type=large', width='80px', height='80px')
              .portfolio-text-info
