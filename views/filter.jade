extends layout

block content
  .page-container.row-fluid
    .page-sidebar.nav-collapse.collapse
      ul
        li
          .sidebar-toggler.hidden-phone
        li
          form.sidebar-search
            .input-box
              a.remove(href='javascript:;')
              input(type='text', placeholder='Search...')
              input.submit(type='button', value=' ')
        li.start
          a(href='index.html')
            i.icon-home
            span.title Dashboard
        li.active.has-sub
          a(href='javascript:;')
            i.icon-bookmark-empty
            span.title UI Features
            span.selected
            span.arrow.open
          ul.sub
            li
              a(href='ui_general.html') General
            li
              a(href='ui_buttons.html') Buttons
            li
              a(href='ui_tabs_accordions.html') Tabs & Accordions
            li
              a(href='ui_sliders.html') Sliders
            li.active
              a(href='ui_tiles.html') Tiles
            li
              a(href='ui_typography.html') Typography
            li
              a(href='ui_tree.html') Tree View
            li
              a(href='ui_nestable.html') Nestable List
        li.has-sub
          a(href='javascript:;')
            i.icon-table
            span.title Form Stuff
            span.arrow
          ul.sub
            li
              a(href='form_layout.html') Form Layouts
            li
              a(href='form_samples.html') Advance Form Samples
            li
              a(href='form_component.html') Form Components
            li
              a(href='form_wizard.html') Form Wizard
            li
              a(href='form_validation.html') Form Validation
            li
              a(href='form_fileupload.html') Multiple File Upload
            li
              a(href='form_dropzone.html') Dropzone File Upload
        li.has-sub
          a(href='javascript:;')
            i.icon-th-list
            span.title Data Tables
            span.arrow
          ul.sub
            li
              a(href='table_basic.html') Basic Tables
            li
              a(href='table_managed.html') Managed Tables
            li
              a(href='table_editable.html') Editable Tables
        li.has-sub
          a(href='javascript:;')
            i.icon-th-list
            span.title Portlets
            span.arrow
          ul.sub
            li
              a(href='portlet_general.html') General Portlets
            li
              a(href='portlet_draggable.html') Draggable Portlets
        li.has-sub
          a(href='javascript:;')
            i.icon-map-marker
            span.title Maps
            span.arrow
          ul.sub
            li
              a(href='maps_google.html') Google Maps
            li
              a(href='maps_vector.html') Vector Maps
        li.
          a(href='charts.html')
            i.icon-bar-chart
            span.title Visual Charts
        li.
          a(href='calendar.html')
            i.icon-calendar
            span.title Calendar
        li.
          a(href='gallery.html')
            i.icon-camera
            span.title Gallery
        li.has-sub
          a(href='javascript:;')
            i.icon-briefcase
            span.title Extra
            span.arrow
          ul.sub
            li
              a(href='extra_profile.html') User Profile
            li
              a(href='extra_faq.html') FAQ
            li
              a(href='extra_search.html') Search Results
            li
              a(href='extra_invoice.html') Invoice
            li
              a(href='extra_pricing_table.html') Pricing Tables
            li
              a(href='extra_404.html') 404 Page
            li
              a(href='extra_500.html') 500 Page
            li
              a(href='extra_blank.html') Blank Page
            li
              a(href='extra_full_width.html') Full Width Page
        li.
          a(href='login.html')
            i.icon-user
            span.title Login Page
    .page-content
      .container-fluid
        .row-fluid
          .span12
            h3.page-title
              | #{title}
        .tiles
          for category in categories
            if category.title == "Men" || category.title == "Women"
              a(href="filter_friends")
                div(class='tile #{category.css}')
                  .title-body
                    h3 #{category.title}
                  .title-object
                    .name
            else
              a(href="filter?filter=#{category.filter}")
                div(class='tile #{category.css}')
                  .title-body
                    h3 #{category.title}
                  .title-object
                    .name
